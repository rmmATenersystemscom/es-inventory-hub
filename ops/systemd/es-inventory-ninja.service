[Unit]
Description=ES Inventory Hub Ninja Collector
After=network.target postgresql.service es-inventory-api.service
Wants=postgresql.service es-inventory-api.service

[Service]
Type=oneshot
User=svc_es-hub
Group=svc_es-hub
WorkingDirectory=/opt/es-inventory-hub
EnvironmentFile=/opt/es-inventory-hub/.env
ExecStart=/opt/es-inventory-hub/scripts/run_ninja_daily.sh
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
