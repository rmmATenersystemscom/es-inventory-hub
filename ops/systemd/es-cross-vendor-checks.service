[Unit]
Description=ES Inventory Hub Cross-Vendor Consistency Checks
Wants=network-online.target
After=network-online.target postgresql.service

[Service]
Type=oneshot
User=rene
WorkingDirectory=/opt/es-inventory-hub
EnvironmentFile=/opt/es-inventory-hub/.env
ExecStart=/bin/bash -lc '/opt/es-inventory-hub/scripts/run_cross_vendor_checks.sh'
Restart=on-failure
RestartSec=30s
