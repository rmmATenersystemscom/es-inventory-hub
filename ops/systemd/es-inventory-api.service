[Service]
Type=simple
User=rene
Group=rene
WorkingDirectory=/opt/es-inventory-hub
Environment=DB_DSN=postgresql+psycopg2://postgres:Xat162gT2Qsg4WDlO5r@localhost:5432/es_inventory_hub
